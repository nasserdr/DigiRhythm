Package: digiRhythm
Type: Package
Title: Analyzing Animal's Rhythmicity
Version: 1.2
Authors@R: c(person("Hassan-Roland", "Nasser", role = c("aut", "cre"),
                     email = "hassan.nasser@me.com"),
              person("Marie", "Schneider", role = c("aut", "ctb"),
